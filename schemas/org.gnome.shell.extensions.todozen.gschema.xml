<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <!-- Panel position: L=left box, M=center box, R=right box -->
  <!-- Second char: L=leftmost, 1=after first, R=rightmost -->
  <enum id="org.gnome.shell.extensions.todozen.position">
    <value nick="left" value="1"/>
    <value nick="center-left" value="2"/>
    <value nick="center" value="3"/>
    <value nick="center-right" value="4"/>
    <value nick="right" value="5"/>
  </enum>

  <enum id="org.gnome.shell.extensions.todozen.popup-width">
    <value nick="normal" value="1"/>
    <value nick="wide" value="2"/>
    <value nick="ultra" value="3"/>
  </enum>

  <schema id="org.gnome.shell.extensions.todozen" path="/org/gnome/shell/extensions/todozen/">
    <key name="todos" type="as">
      <default>[]</default>
      <summary>List of todos</summary>
    </key>
    <!-- got this piece of code from: https://github.com/bsaleil/todolist-gnome-shell-extension -->
    <key name="open-todozen" type="as">
      <default><![CDATA[['<Alt><Shift>space']]]></default>
      <summary>Shortcut to open the extension</summary>
      <description>Click `Alt+Shift+Space` to open the extension.</description>
    </key>
    <key name="panel-position" enum="org.gnome.shell.extensions.todozen.position">
      <default>'right'</default>
      <summary>Panel button position</summary>
      <description>Where to place the TodoZen button in the top panel.</description>
    </key>
    <key name="enable-history" type="b">
      <default>true</default>
      <summary>Enable history logging</summary>
      <description>Log all task actions to ~/.config/todozen/history.jsonl</description>
    </key>
    <key name="groups" type="as">
      <default>['{"version":1,"id":"inbox","name":"Inbox","color":"#3584e4"}']</default>
      <summary>Task groups</summary>
      <description>List of task groups as JSON objects</description>
    </key>
    <key name="last-selected-group" type="s">
      <default>'inbox'</default>
      <summary>Last selected group</summary>
      <description>Remember the last selected group for new tasks</description>
    </key>
    <key name="filter-group" type="s">
      <default>''</default>
      <summary>Filter by group</summary>
      <description>Show only tasks from this group (empty = show all)</description>
    </key>
    <key name="popup-width" enum="org.gnome.shell.extensions.todozen.popup-width">
      <default>'normal'</default>
      <summary>Popup width</summary>
      <description>Width of the popup menu: normal (500px), wide (700px), ultra (900px)</description>
    </key>
    <key name="show-move-to-end-button" type="b">
      <default>false</default>
      <summary>Show move to end button</summary>
      <description>Show a button to move tasks to the end of their group</description>
    </key>
    <key name="show-pinned-in-panel" type="b">
      <default>false</default>
      <summary>Show pinned task in panel</summary>
      <description>Show the focused/pinned task description in the top panel (max 4 words, 30 chars)</description>
    </key>
  </schema>
</schemalist>
